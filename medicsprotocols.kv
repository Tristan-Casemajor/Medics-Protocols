<MainScreenManager>:
    Screen:
        name: "Menu"
        Menu:

    ScreenObjectProperty:
        layout: add_sheet_layout
        name: "AddSheet"
        BoxLayoutActionBar:
            AddSheetLayout:
                id: add_sheet_layout

    ScreenObjectProperty:
        layout: add_mind_map_layout
        name: "AddMindMap"
        BoxLayoutActionBar:
            AddMindMapLayout:
                id: add_mind_map_layout

    CatalogScreen:
        name: "Catalog"
        scroll: catalog_scroll
        id: catalog_screen
        BoxLayoutActionBar:
            Catalog:
                id: catalog_scroll
                catalog_name: catalog_screen.catalog_name
                back_color: catalog_screen.back_color

    SheetViewerScreen:
        sheet_viewer: scroll_sheet_viewer
        name: "SheetViewer"
        BoxLayoutActionBar:
            ScrollSheetViewer:
                id: scroll_sheet_viewer

    MindMapViewerScreen:
        name: "MindMapViewer"
        scatter_mind_map: scatter_mind_map
        BoxLayoutActionBar:
            ScatterMindMap:
                id: scatter_mind_map

